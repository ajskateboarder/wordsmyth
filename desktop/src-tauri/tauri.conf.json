{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "desktop",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "scope": [
          {
            "name": "river",
            "cmd": "./river"
          },
          {
            "name": "river.exe",
            "cmd": "./river.exe"
          }
        ]
      },
      "os": {
        "all": true
      },
      "fs": {
        "all": true,
        "removeFile": true,
        "writeFile": true,
        "scope": [
          "*",
          "**"
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://api.github.com/*",
          "https://github.com/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.wordsmyth",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "amazon",
        "width": 800,
        "height": 600
      }
    ]
  }
}