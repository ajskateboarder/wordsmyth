#!/bin/bash

PY="python3"
PROTOC="python3 -m grpc_tools.protoc"

set -e

function model {
    echo "This will download a ~2GB model file locally. Continue?"; read dummy
    $PY -c \
        'from torchmoji.dl_utils import execute_download; \
        execute_download("./rateboat/algorithms/deepmoji/model/pytorch_model.bin")'
}

function stubs {
    $PROTOC -I ./rateboat/web/store \
		--python_out=./rateboat/web/store/stubs \
		--grpc_python_out=./rateboat/web/store/stubs queue.proto \
		--mypy_out=./rateboat/web/store/stubs
    sed -i -e 's/queue_pb2/web.store.stubs.queue_pb2/g' ./rateboat/web/store/stubs/queue_pb2_grpc.py
}

TIMEFORMAT="Task completed in %3lR"
time ${@:-default}